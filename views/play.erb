<form class="form-signin" action="/result" method="post">
  <h2 class="form-signin-heading">Okay <%= @game.player.name %>, please choose your move!</h2>
  <div class="radio">
    <label><input type="radio" name="choice" value="<%= @game.view_choices[0] %>"><%= @game.view_choices[0] %></label>
  </div>
  <div class="radio">
    <label><input type="radio" name="choice" value="<%= @game.view_choices[1] %>"><%= @game.view_choices[1] %></label>
  </div>
  <div class="radio">
    <label><input type="radio" name="choice" value="<%= @game.view_choices[2] %>"><%= @game.view_choices[2] %></label>
  </div>
  <input type="submit" class="btn btn-lg btn-primary btn-block" id="Let's do this!">
</form>
